{
    "name": "mertcanaydin97/laravel-phpmailer-driver",
    "description": "A custom Laravel mail driver using PHPMailer",
    "version": "1.0.4",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mertcan AydÄ±n",
            "email": "web@mertcanaydin.com.tr"
        }
    ],
    "require": {
        "php": ">=7.4",
        "laravel/framework": "^9.0|^10.0|^11.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Mertcanaydin97\\LaravelPhpMailerDriver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mertcanaydin97\\LaravelPhpMailerDriver\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mertcanaydin97\\LaravelPhpMailerDriver\\PhpMailerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 
